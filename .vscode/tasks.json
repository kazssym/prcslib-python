{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "./setup.py",
                "test"
            ],
            "group": "build"
        },
        {
            "label": "Rebuild",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "./setup.py",
                "clean",
                "test"
            ],
            "group": "build"
        },
        {
            "label": "Clean",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "./setup.py",
                "clean"
            ],
            "group": "none"
        }
    ]
}
